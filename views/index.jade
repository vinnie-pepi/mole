extends layout

block content
  div.index
    h1 Mole
    div.left-column.profile-list
      h2 Profiles
      ul.list-group
        li.list-group-item
          h4.list-group-item-heading John Doe
          p.list-group-item-text College Student, Movie Goer, Vacationer
        li.list-group-item
          h4.list-group-item-heading Justin Beiber 
          p.list-group-item-text Concert Goer

    div.right-column.create-profile
      h2 Create a Profile
      form
        div.input-group
          input.user-id.form-control(placeholder='User ID')
        div.input-group
          textarea.user-traits.form-control(placeholder='User Traits (line seperated)')
        button.btn-success.btn Create
